<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="bottom"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    </FrameLayout>
    <RadioGroup
        android:id="@+id/main_bottom_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/main_home"
            android:paddingLeft="0dp"
            android:drawablePadding="@dimen/little_space"
            style="@style/TabMenuItem"
            android:checked="true"
            android:drawableTop="@drawable/main_home_selector"
            android:text="首页" />
        <RadioButton
            android:id="@+id/main_tuan"
            android:paddingLeft="0dp"
            android:drawablePadding="@dimen/little_space"
            style="@style/TabMenuItem"
            android:drawableTop="@drawable/main_tuan_selector"
            android:text="团购"/>
        <RadioButton
            android:id="@+id/main_search"
            android:paddingLeft="0dp"
            android:drawablePadding="@dimen/little_space"
            style="@style/TabMenuItem"
            android:drawableTop="@drawable/main_search_selector"
            android:text="发现"/>
        <RadioButton
            android:id="@+id/main_my"
            android:paddingLeft="0dp"
            android:drawablePadding="@dimen/little_space"
            style="@style/TabMenuItem"
            android:drawableTop="@drawable/main_my_selector"
            android:text="我的"/>


    </RadioGroup>
</LinearLayout>
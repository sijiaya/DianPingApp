<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/normal_bg_color">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/login_back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_back"
                android:padding="@dimen/normal_space"
                android:contentDescription="@null"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="登录"
                android:textSize="@dimen/title_text_size"
                android:padding="@dimen/normal_space"/>
            <TextView
                android:id="@+id/login_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="注册"
                android:textSize="20sp"
                android:padding="@dimen/normal_space"
                android:textColor="@color/normal_orange_color"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="@dimen/normal_space"
            android:background="@color/normal_orange_color"/>

        <EditText
            android:id="@+id/login_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_input_height"
            android:drawableLeft="@drawable/login_user"
            android:drawablePadding="@dimen/normal_space"
            android:hint="手机号/用户名"
            android:inputType="text"
            android:background="@null"
            android:singleLine="true"
            android:layout_marginLeft="@dimen/normal_space"/>
        <EditText
            android:id="@+id/login_pass"
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_input_height"
            android:drawableLeft="@drawable/login_password"
            android:drawablePadding="@dimen/normal_space"
            android:background="@null"
            android:hint="密码"
            android:singleLine="true"
            android:inputType="numberPassword"
            android:layout_marginLeft="@dimen/normal_space"/>

        <CheckBox
            android:id="@+id/cb_auto_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_input_height"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="自动登录"
            android:textSize="20sp"
            android:textColor="@color/gray"/>
        <Button
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_space"
            android:background="@color/my_btn_bg_color"
            android:padding="@dimen/little_space"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="@dimen/title_size_default"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
        android:gravity="center_horizontal"
        android:text="——————第三方账号登录——————"
        android:textColor="#bababa"
        android:textSize="@dimen/title_size_default"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/big_space"
        android:paddingBottom="@dimen/big_space">

        <TextView
            android:id="@+id/login_by_weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/weixin"
            android:drawablePadding="@dimen/little_space"
            android:gravity="center_vertical"
            android:scaleY="1.0"
            android:scaleX="1.0"
            android:text="微信登录"
            android:textSize="19sp"/>
        <TextView
            android:id="@+id/login_by_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/loginqq"
            android:drawablePadding="@dimen/little_space"
            android:gravity="center_vertical"
            android:scaleY="1.0"
            android:scaleX="1.0"
            android:text="QQ登录"
            android:textSize="19sp"
            android:layout_toRightOf="@+id/login_by_weixin"
            android:layout_marginLeft="35dp"/>


    </RelativeLayout>

</RelativeLayout>
